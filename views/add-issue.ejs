<body>

    <h1>Issues</h1>

    <%- include('includes/project-nav.ejs') %>

    <h3>Add issue</h3>

    <form action="/api/issue/<%= project_id %>/add" method="POST">
        <div class="form-group" >
          <label for="exampleInputEmail1">Title</label>
          <input class="form-control" type="text" placeholder="Title..." name="name" id="name">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Description</label>
          <input class="form-control" type="text" placeholder="Description..." name="desc" id="desc">
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Information</label>
          <textarea class="form-control" id="exampleFormControlTextarea1" name="userinfo_dump" rows="4"></textarea>
          <small id="emailHelp" class="form-text text-muted">You can leave this empty if you want.</small>
        </div>
        <button type="submit" class="btn btn-primary">Add Issue</button>
      </form>

<%- include('includes/end.ejs') %>